<div class="container">
  <div class="row">
    <div class="reg-form">
      <div class="reg-box text-center">
        <h2>Twigram</h2>
        <h6>Sign up to see photos and videos from your friends.</h6>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.text_field :name, autofocus: true, placeholder: "Input you name",class: "input" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Your email", class: "input" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder: "New - password", class: "input" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Repeat new - password", class: "input"%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div> <br>
        <% end %>
        <p>By signing up, you agree to our Terms , Data Policy and Cookies Policy .</p>

      </div>
      <div class="linked-box">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>