<div class="container">
  <div class="row">
    <div class="col-lg-6 side-left">
      <div class="main-page-image left">
        <%= image_tag "phone.png", height: '500' %>
      </div>
    </div>
    <div class="col-lg-6 side-right text-center">
      <div class="login-box">
        <h2>Twigram</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
          </div><br/>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input" %>
          </div><br/>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary"%>
          </div>
          <div class="twitter-form center">

            <p>OR</p>
            <p><%= link_to('/users/auth/facebook', {:class => "btn btn-primary"}) do %>
                Facebook OAuth
              <%- end %></p>

          </div>
          <div>
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>

          </div>

        <% end %>

      </div>

      <div class="linked-box">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= "Don't have you account?" %>
          <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>