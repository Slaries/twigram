<div class="container" >
  <div class="row">
    <div class="row input-form">
      <%= form_for [@user,@post] do |form| %>
        <div class="field"><br/>
          <b><%= form.label :content, 'Content' %></b><br/>
          <%= form.text_area :content, size: "50x2", placeholder: 'Enter you describe, only 140 symbol' %><br/>
        </div>
        <div class="field">
          <%= form.hidden_field :image, value: @post.cached_image_data %>
          <%= form.file_field :image %>
        </div><br/>
        <% if @post.image_data? %>
          <%= image_tag @post.image_url(:small) %><br/>
          Remove attachment: <%= form.check_box :remove_image %>
        <% end %>
        <%= form.text_field :user_id, value: @user.id, class:'d-none' %>
        <div>
          <%= form.submit 'Save Post', class: 'btn btn-primary' %>
        </div>
      <%end%>
    </div>
  </div>
</div>
